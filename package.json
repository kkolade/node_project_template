{
  "name": "node_project_template",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "nodemon ./server.js --exec babel-node",
    "test": "vitest",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint \"public/styles/**/*.{css,pcss}\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "prepare": "husky",
    "styles": "postcss ./public/styles/pcss/main.pcss -o ./public/styles/main.css -w"
  },
  "lint-staged": {
    "*.{css,pcss}": [
      "stylelint --fix"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": {
    "name": "Kola Kolade",
    "email": "kolakolade@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "mongoose": "^8.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.5",
    "@eslint/js": "^9.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lost": "^9.0.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-advanced-variables": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^16.1.0",
    "postcss-lit": "^1.1.1",
    "postcss-mixins": "^10.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-partial-import": "^4.1.0",
    "postcss-preset-env": "^9.5.13",
    "postcss-simple-vars": "^7.0.1",
    "stylelint": "^16.6.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.3.0",
    "vitest": "^1.6.0"
  }
